---
import BaseLayout from 'src/layouts/BaseLayout.astro';
import CTA from '@components/CTA.astro';
---

<BaseLayout
  title='Projects'
  description='McKay Painting Recent Projects'
  preloadImg={import('../assets/images/cabinets2.jpg')}
>
  <!-- ============================================ -->
  <!--                    LANDING                   -->
  <!-- ============================================ -->

  <section id='int-hero'>
    <h1 id='home-h'>Our Projects</h1>
    <picture>
      <source
        media='(max-width: 600px)'
        srcset='/assets/images/cabinets2-m.jpg'
      />
      <source
        media='(min-width: 601px)'
        srcset='/assets/images/cabinets2.jpg'
      />
      <img
        aria-hidden='true'
        decoding='async'
        src='/assets/images/cabinets2.jpg'
        alt='kitchen cabinets'
        loading='eager'
        width='2500'
        height='1667'
      />
    </picture>
  </section>

  <!-- ============================================ -->
  <!--                   Gallery                    -->
  <!-- ============================================ -->

  <section id='gallery'>
    <div class='cs-container'>
      <span class='cs-topper'>Our Portfolio</span>
      <h2 class='cs-title'>Recent projects</h2>
      <div class='cs-image-group'>
        <!-- Row 1-->
        <div class='cs-row cs-row-1'>
          <picture class='cs-picture cs-picture1'>
            <source
              media='(max-width: 600px)'
              srcset='/assets/images/portfolio/house.jpeg'
            />
            <source
              media='(min-width: 601px)'
              srcset='/assets/images/portfolio/house.jpeg'
            />
            <img
              aria-hidden='true'
              decoding='async'
              src='/assets/images/portfolio/house.jpeg'
              alt='new hallway'
              loading='lazy'
              width='400'
              height='560'
            />
          </picture>
          <picture class='cs-picture cs-picture2'>
            <source
              media='(max-width: 600px)'
              srcset='/assets/images/portfolio/kitchen.jpeg'
            />
            <source
              media='(min-width: 601px)'
              srcset='/assets/images/portfolio/kitchen.jpeg'
            />
            <img
              aria-hidden='true'
              decoding='async'
              src='/assets/images/portfolio/kitchen.jpeg'
              alt='new home construction'
              loading='lazy'
              width='400'
              height='560'
            />
          </picture>
          <picture class='cs-picture cs-picture3'>
            <source
              media='(max-width: 600px)'
              srcset='/assets/images/portfolio/garages.jpeg'
            />
            <source
              media='(min-width: 601px)'
              srcset='/assets/images/portfolio/garages.jpeg'
            />
            <img
              aria-hidden='true'
              decoding='async'
              src='/assets/images/portfolio/garages.jpeg'
              alt='building a new wall'
              loading='lazy'
              width='400'
              height='560'
            />
          </picture>
        </div>
        <!-- Row 2 -->
        <div class='cs-row cs-row-2'>
          <picture class='cs-picture cs-picture1'>
            <source
              media='(max-width: 600px)'
              srcset='/assets/images/portfolio/builtin.jpeg'
            />
            <source
              media='(min-width: 601px)'
              srcset='/assets/images/portfolio/builtin.jpeg'
            />
            <img
              aria-hidden='true'
              decoding='async'
              src='/assets/images/portfolio/builtin.jpeg'
              alt='new kitchen'
              loading='lazy'
              width='400'
              height='560'
            />
          </picture>
          <picture class='cs-picture cs-picture2'>
            <source
              media='(max-width: 600px)'
              srcset='/assets/images/portfolio/brick.webp'
            />
            <source
              media='(min-width: 601px)'
              srcset='/assets/images/portfolio/brick.webp'
            />
            <img
              aria-hidden='true'
              decoding='async'
              src='/assets/images/portfolio/brick.jpeg'
              alt='apartment addition'
              loading='lazy'
              width='400'
              height='560'
            />
          </picture>
          <picture class='cs-picture cs-picture3'>
            <source
              media='(max-width: 600px)'
              srcset='/assets/images/portfolio/fun.jpeg'
            />
            <source
              media='(min-width: 601px)'
              srcset='/assets/images/portfolio/fun.jpeg'
            />
            <img
              aria-hidden='true'
              decoding='async'
              src='/assets/images/portfolio/fun.jpeg'
              alt='kew kitchen cabinets'
              loading='lazy'
              width='400'
              height='560'
            />
          </picture>
        </div>
        <!-- Row 3 -->
        <div class='cs-row cs-row-3'>
          <picture class='cs-picture cs-picture1'>
            <source
              media='(max-width: 600px)'
              srcset='/assets/images/portfolio/mountains.jpeg'
            />
            <source
              media='(min-width: 601px)'
              srcset='/assets/images/portfolio/mountains.jpeg'
            />
            <img
              aria-hidden='true'
              decoding='async'
              src='/assets/images/portfolio/mountains.jpeg'
              alt='new kitchen'
              loading='lazy'
              width='400'
              height='560'
            />
          </picture>
          <picture class='cs-picture cs-picture2'>
            <source
              media='(max-width: 600px)'
              srcset='/assets/images/portfolio/closeup.jpeg'
            />
            <source
              media='(min-width: 601px)'
              srcset='/assets/images/portfolio/closeup.jpeg'
            />
            <img
              aria-hidden='true'
              decoding='async'
              src='/assets/images/portfolio/closeup.jpeg'
              alt='apartment addition'
              loading='lazy'
              width='400'
              height='560'
            />
          </picture>
          <picture class='cs-picture cs-picture3'>
            <source
              media='(max-width: 600px)'
              srcset='/assets/images/portfolio/stove.jpeg'
            />
            <source
              media='(min-width: 601px)'
              srcset='/assets/images/portfolio/stove.jpeg'
            />
            <img
              aria-hidden='true'
              decoding='async'
              src='/assets/images/portfolio/stove.jpeg'
              alt='kew kitchen cabinets'
              loading='lazy'
              width='400'
              height='560'
            />
          </picture>
        </div>
      </div>
      <a href='/contact' class='cs-button-solid'>Contact us</a>
    </div>
  </section>

  <style lang='less'>
    /* PAGE-SPECIFIC STYLES FOR THE PROJECTS PAGE */
    /*-- -------------------------- -->
<---          Gallery           -->
<--- -------------------------- -*/
    /* Mobile - 360px - Contains hover animation */
    @media only screen and (min-width: 0em) {
      #gallery {
        /* Centers button */
        text-align: center;
        padding: var(--sectionPadding);
        position: relative;
        /* Prevents overflow from the image going off screen */
        overflow: hidden;
      }
      #gallery .cs-container {
        width: 100%;
        max-width: 82.625em;
        margin: auto;
      }
      #gallery .cs-image-group {
        /* used rem so it doesn't scale with the font size of on parent */
        font-size: min(1.1vw, 1em);
        width: 100%;
        max-width: 82.625em;
        margin: 0 auto 3.75rem;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 1.875em;
      }
      #gallery .cs-row {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        gap: 1.875em;
      }
      #gallery .cs-picture {
        display: block;
        position: relative;
      }
      #gallery .cs-picture img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
      }
      #gallery .cs-row-1 .cs-picture1 {
        width: 26.25em;
        height: 35.4375em;
      }
      #gallery .cs-row-1 .cs-picture2 {
        width: 26.25em;
        height: 39.3125em;
      }
      #gallery .cs-row-1 .cs-picture3 {
        width: 26.25em;
        height: 32em;
      }
      #gallery .cs-row-2 .cs-picture1 {
        width: 26.25em;
        height: 30.75em;
      }
      #gallery .cs-row-2 .cs-picture2 {
        width: 26.25em;
        height: 32.3125em;
      }
      #gallery .cs-row-2 .cs-picture3 {
        width: 26.25em;
        height: 39.3125em;
      }
      #gallery .cs-row-3 .cs-picture1 {
        width: 26.25em;
        height: 39.0625em;
      }
      #gallery .cs-row-3 .cs-picture2 {
        width: 26.25em;
        height: 28.25em;
      }
      #gallery .cs-row-3 .cs-picture3 {
        width: 26.25em;
        height: 39.3125em;
      }
    }
  </style>
</BaseLayout>
