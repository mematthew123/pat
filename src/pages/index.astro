---
import BaseLayout from 'src/layouts/BaseLayout.astro';
import CTA from '@components/CTA.astro';
---

<BaseLayout
  title='Pixel Perfect Websites'
  description='Meta description for the page'
  preloadImg={import('../assets/images/landing.jpg')}
>
  <!-- ============================================ -->
  <!--                    Hero                      -->
  <!-- ============================================ -->

  <section id='hero'>
    <div class='cs-container'>
      <div class='cs-flex-group'>
        <span class='cs-topper'>McKay Painting</span>
        <h1 class='cs-title'>Painting away the blues</h1>
        <p class='cs-text'>
          We are a licensed and insured painting company specializing in
          residential and commercial properties. We are a family owned and
          operated business with over 15 years of experience.
        </p>
        <a href='/about' class='cs-button-solid'>Explore More</a>
        <a href='/contact' class='cs-button-transparent'>
          <img
            class='cs-img'
            loading='lazy'
            decoding='async'
            src='https://csimg.nyc3.digitaloceanspaces.com/Hero/play.svg'
            alt='play icon'
            width='17'
            height='17'
          />
           Get in Touch
        </a>
      </div>
    </div>

    <!-- Background Image -->
    <picture class='cs-picture'>
      <source media='(max-width: 600px)' srcset='src/assets/images/nice.jpeg' />
      <source media='(min-width: 601px)' srcset='src/assets/images/nice.jpeg' />
      <img
        aria-hidden='true'
        decoding='async'
        src='/assets/images/landing.jpg'
        alt='new home'
        width='2500'
        height='1667'
        loading='eager'
      />
    </picture>
  </section>

  <!-- ============================================ -->
  <!--                  Services                    -->
  <!-- ============================================ -->

  <section id='services' class='services'>
    <!-- Get Icons From flaticon.com -->
    <div class='card'>
      <picture>
        <img
          aria-hidden='true'
          decoding='async'
          src='/assets/svgs/service1.svg'
          alt='appliance'
          width='48'
          height='48'
        />
      </picture>
      <h2>Residental</h2>
      <p>
        Specializing in both interior and exterior painting, we can handle all
        of your painting needs.
      </p>
    </div>
    <div class='card'>
      <picture>
        <img
          aria-hidden='true'
          decoding='async'
          src='/assets/svgs/service2.svg'
          alt='appliance'
          width='48'
          height='48'
        />
      </picture>
      <h2>Commercial</h2>
      <p>
        We have the experience and equipment to handle any commercial painting
        job.
      </p>
    </div>
    <div class='card'>
      <picture>
        <img
          aria-hidden='true'
          decoding='async'
          src='/assets/svgs/service3.svg'
          alt='appliance'
          width='48'
          height='48'
        />
      </picture>
      <h2>Remodels</h2>
      <p>
        New construction, remodels, or just a fresh coat of paint, we've got you
        covered.
      </p>
    </div>
  </section>

  <!-- ============================================ -->
  <!--                 Side By Side                 -->
  <!-- ============================================ -->

  <section id='sbs'>
    <div class='cs-container'>
      <!-- Left Image Section -->
      <div class='cs-left'>
        <picture class='cs-picture cs-picture1'>
          <source
            media='(max-width: 600px)'
            srcset='src/assets/images/roller.webp'
          />
          <source
            media='(min-width: 601px)'
            srcset='src/assets/images/roller.webp'
          />
          <img
            aria-hidden='true'
            decoding='async'
            src='src/assets/images/cabinets2.jpg'
            alt='cabinets'
            loading='lazy'
            width='400'
            height='563'
          />
        </picture>
        <picture class='cs-picture cs-picture2'>
          <source
            media='(max-width: 600px)'
            srcset='src/assets/images/finished.webp'
          />
          <source
            media='(min-width: 601px)'
            srcset='src/assets/images/finished.webp'
          />
          <img
            aria-hidden='true'
            decoding='async'
            src='src/assets/images/construction.jpg'
            alt='house'
            loading='lazy'
            width='400'
            height='563'
          />
        </picture>
      </div>
      <!-- Right Content Section-->
      <div class='cs-right'>
        <span class='cs-topper'>About Us</span>
        <h2 class='cs-title'>McKay Painting</h2>
        <p class='cs-text'>
          At McKay Painting, we've been turning ordinary spaces into vibrant
          havens since 1999. Born out of a love for transformation, we believe
          that a fresh coat of paint can do more than just change the look of a
          room – it can change the feel.
        </p>
        <p class='cs-text'>
          We're a family-owned business, and we treat our clients like family
          too. We're here to help you every step of the way, whether you're
          looking to paint a single room or your entire home. We'll work with
